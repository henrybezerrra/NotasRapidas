<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="dragonapp.com.br.easynotes.activitys.AjudaActivity">



        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_note_add_black_24dp"
            android:id="@+id/floatingActionButton2"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView2"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nova Nota"
            android:layout_alignTop="@+id/floatingActionButton2"
            android:layout_alignStart="@+id/textView"
            android:id="@+id/textView2" />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="17dp"
            android:id="@+id/floatingActionButton3"
            android:layout_below="@+id/floatingActionButton2"
            android:layout_alignStart="@+id/floatingActionButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Voltar para a tela anterior"
            android:layout_alignTop="@+id/floatingActionButton3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:id="@+id/textView" />

</RelativeLayout>
